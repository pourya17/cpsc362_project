<Window x:Class="ProjectApp.AddActivityWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Add Activity Entry"
         Height="400" Width="400"
         Background="#00121e"
         FontFamily="/Fonts/#Proxima Nova"
         WindowStartupLocation="CenterScreen"
         ResizeMode="NoResize">

    <Border CornerRadius="15" Margin="20" Background="#0e1f29" Padding="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Add Activity Entry"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Activity Name -->
            <TextBlock Text="Activity Name" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="ActivityNameTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Calories Burned -->
            <TextBlock Text="Calories Burned" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="CaloriesBurnedTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,25"
                     FontSize="16"/>

            <!-- Submit Button with Custom Template -->
            <Button Content="Submit"
                    Height="45"
                    Background="LightGreen"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="18"
                    BorderThickness="0"
                    Click="SubmitButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Border>
</Window>
