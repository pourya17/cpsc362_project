<Window x:Class="ProjectApp.FoodEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Food Entry"
        Height="631" Width="400"
        Background="#00121e"
        FontFamily="/Fonts/#Proxima Nova"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border CornerRadius="15" Margin="20" Background="#0e1f29" Padding="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Add Food Entry"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Food Name -->
            <TextBlock Text="Food Name" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="FoodNameTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Calories -->
            <TextBlock Text="Calories" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="CaloriesTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Protein -->
            <TextBlock Text="Protein (g)" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="ProteinTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Fat -->
            <TextBlock Text="Fat (g)" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="FatTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Carbs -->
            <TextBlock Text="Carbs (g)" Foreground="#c0cad4" FontSize="16"/>
            <TextBox x:Name="CarbsTextBox"
                     Height="35"
                     Background="#0b1921"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Margin="0,5,0,25"
                     FontSize="16"/>

            <!-- Submit Button with Custom Template -->
            <Button Content="Submit"
                    Height="45"
                    Background="LightGreen"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="18"
                    BorderThickness="0"
                    Click="SubmitButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Border>
</Window>
