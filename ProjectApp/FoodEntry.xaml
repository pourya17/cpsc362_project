<Window x:Class="ProjectApp.FoodEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Food Entry" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Food Name:" Width="100"/>
            <TextBox x:Name="FoodNameTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1">
            <TextBlock Text="Calories:" Width="100"/>
            <TextBox x:Name="CaloriesTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="2">
            <TextBlock Text="Protein (g):" Width="100"/>
            <TextBox x:Name="ProteinTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="3">
            <TextBlock Text="Fat (g):" Width="100"/>
            <TextBox x:Name="FatTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="4">
            <TextBlock Text="Carbs (g):" Width="100"/>
            <TextBox x:Name="CarbsTextBox" Width="200"/>
        </StackPanel>

        <Button Grid.Row="5" Content="Submit" Width="100" Margin="0,10,0,0"
                HorizontalAlignment="Center" Click="SubmitButton_Click"/>
    </Grid>
</Window>
