<Window x:Class="ProjectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectApp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CPSC 362"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
        Height="{x:Static SystemParameters.PrimaryScreenHeight}">

    <Grid x:Name="MainGrid" Background="#00121e">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>        
        <!--Text="{Binding , StringFormat={}{0:ddd, MMMM dd}}"-->
        <TextBlock 
                  Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat={}{0:ddd MMM dd\, yyyy}}"
                  Margin="20,41,0,885"
                  Grid.Row="0"
                  Grid.Column="0"
                  FontSize="17"
                  Foreground="#FFB9BCBD"
                  HorizontalAlignment="Left"
                  FontFamily="/Fonts/#Proxima Nova"
                  FontWeight="Bold" Grid.RowSpan="2"
                />

        <Border
            Height="100"
            Margin="575,0,0,10"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            CornerRadius="10"
            Background="#0e1f29"
            Padding="10">



            <StackPanel
    Orientation="Horizontal"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">

    <Button x:Name="Home_Button"
            Style="{StaticResource MainButton}"
            Margin="10,0"
            Click="Home_Button_Click"
            Width="80" Height="80">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                     <Image Source="/Resources/home_Button.png" Height="48" Width="48" Stretch="Uniform"/>
                        <TextBlock Text="Home" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

    <Button x:Name="Entries_Button"
            Style="{StaticResource MainButton}"
            Margin="10,0"
            Click="Entries_Button_Click"
            Width="80" Height="80">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Food" Click="AddFood_Click"/>
                            <MenuItem Header="Add Activity" Click="AddActivity_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Resources/entries_button.png" Height="48" Width="48" Stretch="Uniform"/>
                        <TextBlock Text="Add Entry" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
        
    </Button>

    <Button x:Name="RecentEntries_Button"
            Style="{StaticResource MainButton}"
            Margin="10,0"
            Click="ViewRecentEntries_Button_Click"
            Width="80" Height="80">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Resources/recent_entries_button.png" Height="48" Width="48"/>
                        <TextBlock Text="View Entries" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
    </Button>

                <Button x:Name="Profile_Button"
            Style="{StaticResource MainButton}"
            Margin="10,0"
            Click="Profile_Button_Click"
            Width="80" Height="80">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Resources/profile_button.png" Height="48" Width="59"/>
                        <TextBlock Text="Profile" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </Border>

        <StackPanel 
            Height="450"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Grid.Row="1"
            Grid.Column="1"
            Margin="-180, 60, 0, 0"
            >

            <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="1"
            CornerRadius="10"
            Background="{x:Null}" Grid.ColumnSpan="2"
            >

                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/consumedBackground.png" Height="420"/>

                    <TextBlock 
                    Text= "Today,"
                    FontSize="21"
                    Foreground="White"
                    HorizontalAlignment="Center" 
                    FontFamily="/Fonts/#Proxima Nova"
                    FontWeight="Bold"
                    />

                </StackPanel>
                
                


            </Border>

            <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="1"
            CornerRadius="10"
            Background="{x:Null}" Grid.ColumnSpan="2"
            >

                <Image Source="/Resources/burnedBackground.png" Height="420" Margin="0, -20, 0, 0"/>


            </Border>


        </StackPanel>

        <Border
            Height="650"
            Width="365"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="1"
            CornerRadius="10"
            Margin="30, 0, 0, 0"
            Background="#0e1f29" Grid.ColumnSpan="2"
            >

            <StackPanel
                Height="700"
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >

                <TextBlock
                Height="30"
                Width="420"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Nutrition"
                FontFamily="/Fonts/#Proxima Nova"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                FontSize="30"
                Margin="40"
                
                >

                </TextBlock>

                <!--FAT NUTRITION-->
                <StackPanel
                    Height="50"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    >

                    <TextBlock
                Height="50"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Fat"
                Foreground="#c0cad4"
                FontFamily="/Fonts/#Proxima Nova"
                TextAlignment="Left"
                Margin="30, 0, 0, 0"
                FontSize="30"
                
                />

                    <TextBlock
                Height="50"
                Width="70"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="99%"
                FontFamily="/Fonts/#Proxima Nova"
                Foreground="LightGreen"
                TextAlignment="Right"
                FontSize="30"
                Margin="135, 0, 0, 0"
                
                />
                </StackPanel>


                <!--CARBS NUTRITION-->
                <StackPanel
                    Height="50"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    >

                    <TextBlock
                Height="50"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Carbs"
                Foreground="#c0cad4"
                TextAlignment="Left"
                FontFamily="/Fonts/#Proxima Nova"
                Margin="30, 0, 0, 0"
                FontSize="30"
                
                />

                    <TextBlock
                Height="50"
                Width="70"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="100%"
                Foreground="LightGreen"
                TextAlignment="Right"
                FontFamily="/Fonts/#Proxima Nova"
                FontSize="30"
                Margin="135, 0, 0, 0"
                
                />
                </StackPanel>

                <!--PROTEIN NUTRITION-->
                <StackPanel
                    Height="50"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    >

                    <TextBlock
                Height="50"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Protein"
                Foreground="#c0cad4"
                TextAlignment="Left"
                FontFamily="/Fonts/#Proxima Nova"
                Margin="30, 0, 0, 0"
                FontSize="30"
                
                />

                    <TextBlock
                Height="50"
                Width="70"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="99%"
                Foreground="LightGreen"
                TextAlignment="Right"
                FontFamily="/Fonts/#Proxima Nova"
                FontSize="30"
                Margin="135, 0, 0, 0"
                
                />
                </StackPanel>


                <TextBlock
                Height="50"
                Width="270"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Nutrition not met on:"
                Foreground="#c0cad4"
                TextAlignment="Left"
                FontFamily="/Fonts/#Proxima Nova"
                FontSize="30"
                Margin="30, 120, 0, 0"
                />

                <TextBlock
                Height="190"
                Width="310"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday"
                Foreground="Red"
                TextAlignment="Left"
                FontFamily="/Fonts/#Proxima Nova"
                FontSize="30"
                Margin="30, 10, 0, 0" TextWrapping="Wrap"
                />

            </StackPanel>

        </Border>



        <Border 
    Height="650"
    Width="390"
    HorizontalAlignment="Right"
    VerticalAlignment="Center"
    Grid.Column="1"
    Grid.Row="1"
    CornerRadius="10"
    Margin="30, 0, 30, 0"
    Background="#0e1f29" Grid.ColumnSpan="2">

            <StackPanel>
                <TextBox
            x:Name="SearchBox"
            Height="50"
            Template="{StaticResource DataBox}"
            Width="340"
            VerticalAlignment="Top"
            Margin="15"
            GotFocus="Search_Focus"
            LostFocus="Search_LostFocus"
            Text="Search..."
            TextAlignment="Center"
            Background="#FF0B1921"
            BorderBrush="White"
            BorderThickness="1"
            Foreground="#c0cad4"
            FontSize="30"/>

                <ListBox
            x:Name="PresetsListBox"
            Height="545"
            Width="380"
            Background="#FF0B1921"
            Margin="0, 20, 0, 0"
            Padding="0, 5"
            BorderThickness="1"
            DisplayMemberPath="Name"  />


            </StackPanel>

        </Border>


        <!--RECENT CONSUMED-->
        <Border
            Height="280"
            x:Name="Recent_Consumed"
            Width="330"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Column="1"
            Grid.Row="1"
            CornerRadius="10"
            Margin="-530, 370, 0, 0"
            Background="#0e1f29" Grid.ColumnSpan="2"
            
            >

            <StackPanel
                Height="{Binding ElementName=Recent_Consumed, Path=Height}"
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >

                <TextBlock
                Height="30"
                Width="{Binding ElementName=Recent_Consumed, Path=Width}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Recent"
                FontFamily="/Fonts/#Proxima Nova"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                FontSize="30"
                Margin="10"
               />

                <TextBlock
                Height="35"
                x:Name="RecentC_1"
                Width="{Binding ElementName=Recent_Consumed, Path=Width}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Apple     140 cal"
                FontFamily="/Fonts/#Proxima Nova"
                Foreground="#c0cad4"
                TextAlignment="Center"
                FontSize="30"
                Margin="10"/>

                <TextBlock
                Height="35"
                x:Name="RecentC_2"
                Width="{Binding ElementName=Recent_Consumed, Path=Width}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Apple     140 cal"
                FontFamily="/Fonts/#Proxima Nova"
                Foreground="#c0cad4"
                TextAlignment="Center"
                FontSize="30"
                Margin="10"/>

                <TextBlock
                Height="35"
                x:Name="RecentC_3"
                Width="{Binding ElementName=Recent_Consumed, Path=Width}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Apple     140 cal"
                FontFamily="/Fonts/#Proxima Nova"
                Foreground="#c0cad4"
                TextAlignment="Center"
                FontSize="30"
                Margin="10"/>

            </StackPanel>

        </Border>

        <!--RECENT BURNED-->

        <Border
    Height="280"
    x:Name="Recent_Burned"
    Width="330"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Grid.Column="1"
    Grid.Row="1"
    CornerRadius="10"
    Margin="170, 370, 0, 0"
    Background="#0e1f29"
    >

            <StackPanel
        Height="{Binding ElementName=Recent_Burned, Path=Height}"
        Orientation="Vertical"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

                <TextBlock
            Height="30"
            Width="{Binding ElementName=Recent_Burned, Path=Width}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Recent Activities"
            FontFamily="/Fonts/#Proxima Nova"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            FontSize="30"
            Margin="10"
        />

                <TextBlock
            Height="35"
            x:Name="RecentB_1"
            Width="{Binding ElementName=Recent_Burned, Path=Width}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Running     140 cal"
            FontFamily="/Fonts/#Proxima Nova"
            Foreground="#c0cad4"
            TextAlignment="Center"
            FontSize="30"
            Margin="10"/>

                <TextBlock
            Height="35"
            x:Name="RecentB_2"
            Width="{Binding ElementName=Recent_Burned, Path=Width}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Running     140 cal"
            FontFamily="/Fonts/#Proxima Nova"
            Foreground="#c0cad4"
            TextAlignment="Center"
            FontSize="30"
            Margin="10"/>

                <TextBlock
            Height="35"
            x:Name="RecentB_3"
            Width="{Binding ElementName=Recent_Burned, Path=Width}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Running     140 cal"
            FontFamily="/Fonts/#Proxima Nova"
            Foreground="#c0cad4"
            TextAlignment="Center"
            FontSize="30"
            Margin="10"/>
            </StackPanel>

        </Border>


    </Grid>

</Window>
