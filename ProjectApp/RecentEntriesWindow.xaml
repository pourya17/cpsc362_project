<Window x:Class="ProjectApp.RecentEntriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recent Entries"
        Height="600" Width="600"
        Background="#00121e"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border CornerRadius="15" Margin="20" Background="#0e1f29" Padding="20">
        <StackPanel>
            <TextBlock Text="Last 10 Entries"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <ScrollViewer Height="330">
                <ItemsControl x:Name="EntriesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0b1921" CornerRadius="10" Margin="0,5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Foreground="LightGreen" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Type}" Foreground="LightGray" FontSize="12" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Summary}" Foreground="White" FontSize="14"/>
                                    <Button Content="Delete" Background="Red" Foreground="White" Click="DeleteEntry_Click" Tag="{Binding Id}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Border>
</Window>
