<Window x:Class="ProjectApp.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entry Summary"
        Height="351" Width="418"
        Background="#00121e"
        FontFamily="/Fonts/#Proxima Nova"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border Background="#0e1f29" CornerRadius="15" Margin="20" Padding="20">
        <StackPanel>
            <TextBlock Text="Summary: Food Added"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="SummaryText"
                       Foreground="White"
                       FontSize="16"
                       TextWrapping="Wrap"/>

            <Button Content="OK"
                    Height="40"
                    Margin="0,20,0,0"
                    Background="LightGreen"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Width="80"
                    Click="OK_Click"/>
        </StackPanel>
    </Border>
</Window>
